<!-- Vehicle Management -->
<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Manage Vehicles</h2>
    <a href="/admin/vehicles/add" class="btn btn-dark">Add New Vehicle</a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <% if (vehicles.length > 0) { %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Brand</th>
              <th>Type</th>
              <th>Price</th>
              <th>Last Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% vehicles.forEach(vehicle => { %>
            <tr>
              <td>
                <img
                  src="<%= vehicle.image %>"
                  alt="<%= vehicle.name %>"
                  class="img-thumbnail"
                  style="width: 50px"
                />
              </td>
              <td><%= vehicle.name %></td>
              <td><%= vehicle.brand %></td>
              <td>
                <span class="badge bg-secondary"><%= vehicle.type %></span>
              </td>
              <td>Â£<%= vehicle.price.toFixed(2) %></td>
              <td><%= new Date(vehicle.updatedAt).toLocaleDateString() %></td>
              <td>
                <div class="btn-group">
                  <a
                    href="/admin/vehicles/edit/<%= vehicle._id %>"
                    class="btn btn-sm btn-outline-dark"
                    >Edit</a
                  >
                  <form
                    action="/admin/vehicles/delete/<%= vehicle._id %>"
                    method="POST"
                    class="d-inline"
                    onsubmit="return confirm('Are you sure you want to delete this vehicle?');"
                  >
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <p class="text-muted mb-0">
        No vehicles found.
        <a href="/admin/vehicles/add">Add your first vehicle</a>
      </p>
      <% } %>
    </div>
  </div>
</div>
