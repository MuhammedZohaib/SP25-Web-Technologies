<!-- Top Announcement Bar -->
<div class="bg-light py-2">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div
          id="announcementCarousel"
          class="carousel slide"
          data-bs-ride="carousel"
        >
          <div class="carousel-inner text-center">
            <div class="carousel-item active">
              <small class="text-uppercase">Welcome to our website</small>
            </div>
            <div class="carousel-item">
              <small class="text-uppercase">Free shipping on all orders</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-white">
  <div class="container">
    <a class="navbar-brand" href="/">Ecommerce Website</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a
            class="nav-link <%= (title.includes('Home')) ? 'active' : '' %>"
            href="/"
            >Home</a
          >
        </li>
        <% if(user) { %>
        <li class="nav-item">
          <a
            class="nav-link <%= (title.includes('My Orders')) ? 'active' : '' %>"
            href="/orders/my-orders"
            >My Orders</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= (title.includes('Cart')) ? 'active' : '' %>"
            href="/cart"
            >Cart</a
          >
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
        <% } else { %>
        <li class="nav-item">
          <a
            class="nav-link <%= (title.includes('Login')) ? 'active' : '' %>"
            href="/login"
            >Login</a
          >
        </li>
        <li class="nav-item">
          <a
            class="nav-link <%= (title.includes('Register')) ? 'active' : '' %>"
            href="/register"
            >Register</a
          >
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
