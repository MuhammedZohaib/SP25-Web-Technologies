<!-- Quick View Modal -->
<div
  class="modal fade"
  id="quickViewModal"
  tabindex="-1"
  aria-labelledby="quickViewModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title" id="quickViewModalLabel">Quick View</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <img
              id="quickViewImage"
              src="/placeholder.svg"
              alt="Product Image"
              class="img-fluid"
            />
          </div>
          <div class="col-md-6">
            <h4 id="quickViewName"></h4>
            <p id="quickViewPrice" class="text-muted mb-4"></p>
            <div class="mb-3">
              <label for="quickViewSize" class="form-label">Size</label>
              <select class="form-select" id="quickViewSize">
                <option selected>Select Size</option>
                <option value="XS">XS</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
              </select>
            </div>
            <div class="mb-4">
              <label for="quickViewQuantity" class="form-label">Quantity</label>
              <div class="input-group">
                <button
                  class="btn btn-outline-secondary"
                  type="button"
                  id="decreaseQuantity"
                >
                  -
                </button>
                <input
                  type="text"
                  class="form-control text-center"
                  id="quickViewQuantity"
                  value="1"
                />
                <button
                  class="btn btn-outline-secondary"
                  type="button"
                  id="increaseQuantity"
                >
                  +
                </button>
              </div>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-dark text-uppercase">Add to Bag</button>
              <button class="btn btn-outline-dark text-uppercase">
                Add to Wishlist
              </button>
            </div>
            <div class="mt-4">
              <p class="small mb-2">
                <i class="fas fa-truck me-2"></i> Free shipping on orders over
                £250
              </p>
              <p class="small mb-2">
                <i class="fas fa-undo me-2"></i> Free returns within 14 days
              </p>
              <p class="small">
                <i class="fas fa-shield-alt me-2"></i> Secure payment
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
